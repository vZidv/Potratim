@model Potratim.Models.Category

<h1 class="text-center text-white mb-4">Удаление категории</h1>
<div class="category-delete-form">
    <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
        <div class="form-group text-white">
            <p>Вы уверены, что хотите удалить категорию <strong>@Model.Name</strong>?</p>
        </div>
        <div class="form-group mt-3">
            <button type="submit" class="btn btn-danger">Удалить</button>
            <a class="btn btn-secondary" asp-action="Index">Отмена</a>
        </div>
    </form>
</div>
