@model Potratim.ViewModel.CreateGameViewModel

<h1 class="text-center text-white mb-4">Добавить игру</h1>
<div class="game-create-form">
    <a asp-area="Admin" asp-controller="Games" asp-action="Index" class="btn btn-secondary mb-4">Назад к списку игр</a>
    <form asp-area="Admin" asp-controller="Games" asp-action="Create" enctype="multipart/form-data">
        <div class="mb-3">
            <label asp-for="Title" class="form-label text-white">Название</label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ReleaseDate" class="form-label text-white">Дата релиза</label>
            <input asp-for="ReleaseDate" class="form-control" />
            <span asp-validation-for="ReleaseDate" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Developer" class="form-label text-white">Разработчик</label>
            <input asp-for="Developer" class="form-control" />
            <span asp-validation-for="Developer" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Publisher" class="form-label text-white">Издатель</label>
            <input asp-for="Publisher" class="form-control" />
            <span asp-validation-for="Publisher" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Price" class="form-label text-white">Цена</label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description" class="form-label text-white">Описание</label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ImageFile" class="form-label text-white">Обложка игры</label>
            <input asp-for="ImageFile" type="file" class="form-control" />
            <span asp-validation-for="ImageFile" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SelectedCategoryIds" class="form-label">Категории</label>
            @if(Model.Categories != null && Model.Categories.Any())
            {
                <div class="category-checkboxes">
                    @for (int i = 0; i < Model.Categories.Count; i++)
                    {
                        <div class="form-check">
                            <input type="checkbox" name="SelectedCategoryIds" value="@Model.Categories[i].Id" class="form-check-input" />
                            <label class="form-check-label">@Model.Categories[i].Name</label>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-info">Нет доступных категорий. <a asp-area="Admin" asp-controller="Categories" asp-action="Index">Создайте категории</a>.</div>
            }
        </div>
        <div class="text-end mt-4">
            <a class="btn btn-secondary" asp-area="Admin" asp-controller="Games" asp-action="Index">Отмена</a>
            <button type="submit" class="btn btn-success">Добавить игру</button>
        </div>
    </form>
</div>