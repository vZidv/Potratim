@model Potratim.ViewModel.CartViewModel

<div>
    <a class="btn me-2 nav-btn cart">
        @if (Model.Items != null && Model.Items.Any())
        {
            <span class="cart-count">@Model.Items.Count()</span>
        }
        <i class="fa fa-shopping-cart" aria-hidden="true"></i>
    </a>
    <div class="cart-items-container" style="display: none;">
        @if (Model.Items != null && Model.Items.Any())
        {
            foreach (Game item in Model.Items)
            {
                <div class="cart-item">
                    <img src="@item.ImageUrl" alt="@item.Title" />
                    <div class="cart-item-details">
                        <h5>@item.Title</h5>
                        <p>@((int)(item.Price)) ₽</p>
                    </div>
                    <div class="cart-item-remove">
                        <a asp-action="RemoveFromCart" asp-controller="Cart" asp-route-gameId="@item.Id" class="btn btn-link"
                            style="color: #a1a1a1;" title="Удалить из корзины">
                            <i class="fa fa-times-circle" aria-hidden="true"></i>
                        </a>
                    </div>
                </div>
            }
            <div class="cart-footer">
                <div class="cart-total">
                    <strong>Общая сумма:</strong> @((int)(Model.TotalPrice)) ₽
                </div>
                <a asp-action="Index" asp-controller="Order" class="btn btn-success mt-4"
                    style="float: right; margin: 5px 3px;">Оформить заказ</a>
            </div>
        }
        else
        {
            <div class="text-center" style="padding: 1rem;">
                <p>Корзина пуста</p>
            </div>
        }

    </div>
</div>
