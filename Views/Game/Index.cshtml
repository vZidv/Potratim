@model Potratim.ViewModel.GameIndexViewModel

<div class="game-container">
    <div class="game-top-section">
        <div class="game-image">
            <img src="@Model.Game?.ImageUrl">
        </div>
        <div class="game-info">
            <div class="game-info-content">
                <h1>@Model.Game?.Title</h1>
                <div class="game-categories">
                    @foreach (var category in Model.Categories)
                    {
                        <span class="game-category">@category.Name</span>
                    }
                </div>
                <div class="game-sold-review-result">
                    <p>Продано: 256</p>
                    <p>●</p>
                    <p>Отзывы: 128</p>
                </div>
                <div class="game-info-main">
                    <div>
                        <h2>Разработчик</h2>
                        <p>@Model.Game?.Developer</p>
                    </div>
                    <div>
                        <h2>Издатель</h2>
                        <p>@Model.Game?.Publisher</p>
                    </div>
                    <div>
                        <h2>Дата выхода</h2>
                        <p>@Model.Game?.ReleaseDate.ToString("dd MMMM yyyy")</p>
                    </div>
                    <div>
                        <h2>Платформа</h2>
                        <p>PC</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="game-info-buy">
            <div>
                <h1 style="font-size: 2rem; font-weight: bold; color: #18ff78;">@((int)Model.Game.Price) <i
                        class="fa fa-rub" style="color: #ffffff; font-size: 1.2rem;" aria-hidden="true"></i></h1>
                <div class="game-info-buy-buttons mt-4">
                    <a class="btn btn-secondary" asp-controller="Cart" asp-action="AddToCart" asp-route-gameId="@Model.Game.Id">
                        <i class="fa fa-shopping-cart"></i>
                    </a>
                    <button class="btn btn-primary" style="width: 75%; font-weight: bold;"><i
                            style="color: #ffffff; margin-right: 5px;" class="fa fa-flash"></i>Купить сейчас</button>
                </div>
            </div>
            <div class="game-info-buy-bags">
                <div class="game-info-buy-bag">
                    <div>
                        <i style="color: #18ff78;" class="fa fa-shield"></i>
                    </div>
                    <div style="display: flex; flex-direction: column;">
                        <p style="font-weight: bold; margin-bottom: 1px; margin-top: 4px;">Безопасная сделка</p>
                        <p style="color: #858585;">Гарантия возврата средств</p>
                    </div>
                </div>
                <div class="game-info-buy-bag">
                    <div>
                        <i style="color: #deff4c;" class="fa fa-flash"></i>
                    </div>
                    <div style="display: flex; flex-direction: column;">
                        <p style="font-weight: bold; margin-bottom: 1px; margin-top: 4px;">Мгновенная доставка</p>
                        <p style="color: #858585;">Ключ сразу после оплаты</p>
                    </div>
                </div>
                <div class="game-info-buy-bag">
                    <div>
                        <i style="color: #4c5eff;" class="fa fa-phone-square"></i>
                    </div>
                    <div style="display: flex; flex-direction: column;">
                        <p style="font-weight: bold; margin-bottom: 1px; margin-top: 4px;">Поддержка 24/7</p>
                        <p style="color: #858585;">Помощь в любое время</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="game-details">
        <h1 class="text-white mb-0">Описание</h1>
        <hr class="text-white">
        <div class="game-description">
            <p>@Model.Game?.Description</p>
        </div>

    </div>

    <div class="game-similar">
        <div class="swiper-container">
            <h2 class="section-title text-white">Похожие игры</h2>
            <hr class="bg-white line-home">

            <div class="swiper game-new-swiper">
                <div class="swiper-wrapper">
                    @if (Model.SameGames != null && Model.SameGames.Any())
                    {
                        @foreach (var game in Model.SameGames)
                        {
                            <div class="swiper-slide">
                                <a class="btn" asp-controller="Game" asp-action="Index" asp-route-id="@game.Id">
                                    <div class="game-card">
                                        <img src="@game.ImageUrl" alt="@game.Title" class="game-card-image">
                                        <h3 class="game-card-title text-center">@game.Title</h3>
                                    </div>
                                </a>
                            </div>
                        }
                    }
                </div>
                <div class="swiper-button-next"></div>
                <div class="swiper-button-prev"></div>
            </div>
        </div>
    </div>
    <div class="game-reviews mt-4">

        <div class="game-reviews-wrapper mt-4">
            <h2 class="text-white mb-4">Оставить отзыв</h2>
            @if(TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
            }
            @if(TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">@TempData["SuccessMessage"]</div>
            }
            <a class="text-decoration-none" @(User.Identity.IsAuthenticated ? "" : "href=/Account/Login")>

                <form asp-controller="Game" asp-action="CreateReview" method="post">
                    <div class="game-reviews-wrapper-content">
                        <input type="hidden" name="GameId" value="@Model.Game.Id"/>
                        <div class="user-avatar">
                            <i class="fa fa-user"></i>
                        </div>
                        <div class="wrapper">
                            <textarea class="form-control" name="Comment" placeholder="Ваш отзыв"></textarea>
                        </div>
                        <div class="game-reviews-wrapper-grade">
                            <input type="radio" id="like-radio" name="Like" value="true"
                                class="custom-radio-unvisited" />
                            <label for="like-radio" class="custom-radio-grade text-white">
                                <i class="fa fa-thumbs-up"></i>
                            </label>
                            <input type="radio" id="dislike-radio" name="Like" value="false"
                                class="custom-radio-unvisited" />
                            <label for="dislike-radio" class="custom-radio-grade text-white">
                                <i class="fa fa-thumbs-down"></i>
                            </label>
                        </div>
                    </div>
                    <div class="game-reviews-submit mt-4">
                        <button type="submit" class="btn btn-primary">Отправить отзыв</button>
                    </div>
                </form>

            </a>
        </div>

        <div class="game-reviews-list-container mt-4">
            <h2 class="text-white mb-4">Отзывы</h2>
            @if (Model.Reviews != null && Model.Reviews.Any())
            {
                @foreach (var review in Model.Reviews)
                {
                    <div class="game-review-item">
                        <div class="game-review-header">
                            <div class="user-avatar">
                                <i class="fa fa-user"></i>
                            </div>
                            <div class="wrapper">
                                <p class="game-review-text">@review.Comment</p>
                            </div>
                            <div class="game-review-grade">
                                @if (review.Like == true)
                                {
                                    <i style="color: #28a745;" class="fa fa-thumbs-up"></i>
                                }
                                else
                                {
                                    <i style="color: #dc3545;" class="fa fa-thumbs-down"></i>
                                }
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="text-center">
                    <h2 class="message">Нет отзывов</h2>
                </div>
            }
        </div>
    </div>
</div>


@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const swiper = new Swiper('.game-new-swiper', {
                loop: true,
                slidesPerView: 1,
                spaceBetween: 10,
                navigation: {
                    nextEl: '.swiper-button-next',
                    prevEl: '.swiper-button-prev',
                },
                breakpoints: {
                    640: { slidesPerView: 2, spaceBetween: 20 },
                    768: { slidesPerView: 3, spaceBetween: 30 },
                    1024: { slidesPerView: 4, spaceBetween: 40 },
                },
                autoplay: {
                    delay: 3000,
                    disableOnInteraction: false,
                    pauseOnMouseEnter: true
                }
            });
        });
    </script>

    <partial name="_ValidationScriptsPartial" />
    
    <script>
        $(document).ready(function() {
            $('#review-form').validate({
                rules: {
                    'CreateReviewModel.ReviewGrade': {
                        required: true
                    }
                },
                messages: {
                    'CreateReviewModel.ReviewGrade': {
                        required: 'Пожалуйста, выберите оценку'
                    }
                },
                errorPlacement: function(error, element) {
                    if (element.attr('name') === 'CreateReviewModel.ReviewGrade') {
                        error.insertAfter('.game-reviews-wrapper-grade');
                    } else {
                        error.insertAfter(element);
                    }
                }
            });
        });
    </script>
}