@model IEnumerable<Potratim.Models.Category>

<h1 class="text-white text-center categories-header">Управление категориями</h1>

<div class="categories-content">
    <div >
        <a asp-area="Admin" asp-controller="Panel" asp-action="Index" class="btn btn-secondary mb-3">Назад к панели</a>
    </div>
    <form asp-area="Admin" asp-controller="Categories" asp-action="Search">
        <div class="input-group mb-3">
            <input type="text" class="form-control" placeholder="Поиск по категориям" name="searchString" />
            <button class="btn btn-outline-secondary" type="submit">Поиск</button>
        </div>
    </form>
    <div class="text-end md-3">
        <a asp-area="Admin" asp-controller="Categories" asp-action="Create" class="btn btn-success mb-3">+ Добавить
            категорию</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Название</th>
                <th>Кол-во игр</th>
                <th class="text-center">Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Id</td>
                    <td>@category.Name</td>
                    <td>@category.Games.Count()</td>
                    <td>
                        <div style="text-align: center;">
                            <a asp-area="Admin" asp-controller="Categories" asp-action="Edit" asp-route-id="@category.Id"
                                class="btn btn-primary">Редактировать</a>
                            <a asp-area="Admin" asp-controller="Categories" asp-action="Delete" asp-route-id="@category.Id"
                                class="btn btn-danger">Удалить</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
