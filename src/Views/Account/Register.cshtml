@model Potratim.ViewModel.RegisterViewModel

<div class="row">
    <div class="col-md-5 my-custom-column mx-auto">
        <section>
            <form asp-controller="Account" asp-action="Register" method="post">
                <h4>Регистрация</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group log-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group log-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" type="password"/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group log-group">
                    <label asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword" class="form-control" type="password"/>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="text-end">
                        <button type="submit" class="btn btn-primary" style="min-width: 110px; height: auto;">Зарегистрироваться</button>
                    </div>
                </div>
            </form>
            <hr />
            <div>
                <a asp-controller="Account" asp-action="Login">Уже есть аккаунт? Войдите</a>
            </div>
        </section>
    </div>
</div>